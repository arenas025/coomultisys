---


const {title, description, image,icon} = Astro.props
---

<div class="flex relative flex-col">
  <img src={image} class="h-[400px]" alt={title} >
  <div class=" relative p-4 items-center  bg-white drop-shadow-md w-[80%] self-center -top-20  flex flex-col gap-5">
    <p class="text-2xl font-poppins font-bold">
      {title}
    </p>
    <p class="text-justify text-lg">
      {description}
    </p>
    <div class="absolute -top-5 right-5 w-[50px] flex items-center justify-center h-[50px] bg-white" >
      <img src={icon} alt={title} class="w-[30px] h-[30px]">
    </div>
  </div>
</div>